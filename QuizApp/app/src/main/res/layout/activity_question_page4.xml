<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.prajwala.quizapp.QuestionPage4"
    android:background="#ffedffbc">

    <TextView android:text="@string/questionfour" android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:singleLine="false"
        android:layout_alignParentEnd="false"
        android:textIsSelectable="false"
        android:id="@+id/textView8"
        android:textColor="#ff040404"
        android:textSize="20sp" />

    <Button
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:text="International Standard Digital Network"
        android:id="@+id/q4o1"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:onClick="wrong"
        android:textColor="#ffffffff"
        android:background="@mipmap/scorepic" />

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Internet Server Data Network"
        android:id="@+id/q4o2"
        android:layout_below="@+id/q4o1"
        android:layout_centerHorizontal="true"
        android:onClick="wrong"
        android:textColor="#ffffffff"
        android:background="@mipmap/scorepic" />

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Integrated Service Digital Network"
        android:id="@+id/q4o3"
        android:layout_below="@+id/q4o2"
        android:layout_centerHorizontal="true"
        android:onClick="correct"
        android:textColor="#ffffffff"
        android:background="@mipmap/scorepic" />
    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Integrated System Digital Network"
        android:id="@+id/q4o4"
        android:layout_below="@+id/q4o3"
        android:layout_centerHorizontal="true"
        android:onClick="wrong"
        android:textColor="#ffffffff"
        android:background="@mipmap/scorepic" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/score4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff040404" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="PROCEED"
        android:id="@+id/proceed4"
        android:background="#e3184fff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:onClick="movenext" />

</RelativeLayout>
