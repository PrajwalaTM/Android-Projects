<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.prajwala.quizapp.QuestionPage1"
    android:id="@+id/rellayout"
    android:background="#ffedffbc">


    <TextView android:text="@string/questionone" android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:singleLine="false"
        android:layout_alignParentEnd="false"
        android:textIsSelectable="false"
        android:id="@+id/textView5"
        android:textSize="25sp"
        android:textColor="#ff080808" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="KELOPS"
        android:id="@+id/q1o1"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:onClick="wrong"
        android:background="@mipmap/scorepic"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="GELOPS"
        android:id="@+id/q1o2"
        android:layout_below="@+id/q1o1"
        android:layout_centerHorizontal="true"
        android:onClick="correct"
        android:background="@mipmap/scorepic"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="MELOPS"
        android:id="@+id/q1o3"
        android:layout_below="@+id/q1o2"
        android:layout_centerHorizontal="true"
        android:onClick="wrong"
        android:background="@mipmap/scorepic"
        android:textColor="#ffffffff" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="NONE OF THESE"
        android:id="@+id/q1o4"
        android:layout_below="@+id/q1o3"
        android:layout_centerHorizontal="true"
        android:onClick="wrong"
        android:background="@mipmap/scorepic"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/score1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="PROCEED"
        android:id="@+id/proceed1"
        android:background="#e3184fff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:onClick="movenext" />


</RelativeLayout>
