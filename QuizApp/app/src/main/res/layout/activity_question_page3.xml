<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.prajwala.quizapp.QuestionPage3"
    android:background="#ffedffbc">

    <TextView android:text="@string/questionthree" android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:singleLine="false"
        android:layout_alignParentEnd="false"
        android:textIsSelectable="false"
        android:id="@+id/textView7"
        android:textColor="#ff040404"
        android:textSize="20sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tron"
        android:id="@+id/q3o1"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:onClick="wrong"
        android:textColor="#ffffffff"
        android:background="@mipmap/scorepic" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Forbidden Planet"
        android:id="@+id/q3o2"
        android:layout_below="@+id/q3o1"
        android:layout_centerHorizontal="true"
        android:onClick="wrong"
        android:textColor="#ffffffff"
        android:background="@mipmap/scorepic" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Dark Star"
        android:id="@+id/q3o3"
        android:layout_below="@+id/q3o2"
        android:layout_centerHorizontal="true"
        android:onClick="wrong"
        android:textColor="#ffffffff"
        android:background="@mipmap/scorepic" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Star War"
        android:id="@+id/q3o4"
        android:layout_below="@+id/q3o3"
        android:layout_centerHorizontal="true"
        android:onClick="correct"
        android:textColor="#ffffffff"
        android:background="@mipmap/scorepic" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/score3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="PROCEED"
        android:id="@+id/proceed3"
        android:background="#e3184fff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:onClick="movenext" />

</RelativeLayout>
